<!-- BEGIN PAGE HEADER-->
<div class="top-section center-text">
  <h1>
    Edit <%= @pet.name %>
  </h1>
</div>
<!-- END PAGE HEADER-->

<div class="center-alignment center-text">
  <%= form_for :pet, url: { action: "update" }, method: :PUT do |f| %>
    <%= render 'shared/error_messages', object: @pet %>
    <%= render partial: "form", locals: { f: f } %>

    <% if pet_owner?(@current_user, @pet) %>
      <div class="form-group">
        <%= f.label "Adopted?" %>
        <%= f.check_box :adopted %>
      </div>
    <% end %>

    <%= f.button "Save", id: "save-pet-btn", class: "btn hvr-sweep-to-right" %>
  <% end %>
</div>
