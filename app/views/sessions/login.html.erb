<div class="top-section">
  <h1>
    Welcome back!
  </h1>
<!-- END PAGE HEADER-->

<%= form_tag(action: 'login_attempt') do %>
  <div class="form-group">
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
  </div>

  <div class="form-group">
    <%= label_tag "Password" %>
    <%= password_field_tag :login_password %>
  </div>

  <%= submit_tag("Login") %>
<% end %>

</div>
