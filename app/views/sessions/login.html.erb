<!-- BEGIN PAGE HEADER-->
<div class="top-section center-text">
  <h1>
    Welcome back!
  </h1>
<!-- END PAGE HEADER-->

<div class="center-alignment center-text">
  <%= form_tag(action: 'login') do %>
  <div class="form-group">
    <%= label_tag "Username" %>
    <%= text_field_tag :username %>
  </div>

  <div class="form-group">
    <%= label_tag "Password" %>
    <%= password_field_tag :login_password %>
  </div>

  <%= submit_tag("Login", class: "btn hvr-sweep-to-right") %>
  <% end %>
</div>
