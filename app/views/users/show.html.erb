<!-- BEGIN PAGE HEADER-->
<div class="top-section center-text">
  <h1>
    <%= @user.name %>
  </h1>
</div>
<!-- END PAGE HEADER-->

<div class="center-text">
  <p class="item"><i class="fa fa-envelope" aria-hidden="true"></i> E-mail (for contact): <%= @user.email %></p>
  <p class="item"><i class="fa fa-map-marker" aria-hidden="true"></i> Location: <%= @user.location %></p>
  <p class="item"><i class="fa fa-user" aria-hidden="true"></i> Username: <%= @user.username %></p>
  <p class="item"><i class="fa fa-info" aria-hidden="true"></i> About: <%= @user.about %></p>
  <% if @user.admin %>
    <p class="item"><strong>Admin User</strong></p>
  <% end %>
  <div class="">
    <%= link_to fa_icon("pencil", text: "Edit"), edit_user_path(@user.id), class: "btn hvr-sweep-to-right" %>
    <%= link_to fa_icon("times", text: "Delete account"), user_path(@user.id), method: :delete, data: { confirm: 'Are you certain you want to delete this?' }, class: "btn hvr-sweep-to-right" %>
  </div>
</div>

<% if @user.pets.present? %>
  <div class="center-text">
    <h2>Pets listed for adoption</h2>
    <% @user.pets.each do |pet| %>
      <p><%= pet.name %></p>
    <% end %>
  </div>
<% end %>
