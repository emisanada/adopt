<div class="top-section">
  <h1>
    List of users
  </h1>
</div>
<!-- END PAGE HEADER-->

<% @users.each do |u| %>
  <article class="users-list">
    <div class="title">
      <h2><%= u.name %></h2>
      <p><%= u.email %></p>
      <p><%= u.location %></p>
      <p><%= u.username %></p>
      <p><%= u.about %></p>
    </div>
  </article>
<% end %>
